<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td class="btn btn-link"><%= link_to 'Show', restaurant %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="btn btn-link">
<%= link_to 'Add a new restaurant', new_restaurant_path(@restaurant) %>
</div>
